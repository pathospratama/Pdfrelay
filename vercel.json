{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "250mb",
        "includeFiles": ["api/utils/*"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/process-pdf",
      "dest": "api/process_pdf.py"
    },
    {
      "src": "/health",
      "dest": "api/health.py"
    }
  ]
}
